<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OlkalouStudentSystem"
             xmlns:converters="clr-namespace:OlkalouStudentSystem.Converters"
             x:Class="OlkalouStudentSystem.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:ErrorToColorConverter x:Key="ErrorToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>