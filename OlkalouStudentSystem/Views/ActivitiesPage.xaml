<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlkalouStudentSystem.Views.ActivitiesPage"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding LoadActivitiesCommand}">

        <ScrollView>
            <VerticalStackLayout Padding="15" Spacing="15">

                <Label Text="School Activities"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#2E7D32"
                       HorizontalOptions="Center"
                       Margin="0,10,0,20" />

                <CollectionView ItemsSource="{Binding Activities}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="White" 
                                    StrokeThickness="0"
                                    Margin="0,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Padding="20">
                                    <!-- Activity Header -->
                                    <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
                                        <Border BackgroundColor="{Binding Type, Converter={StaticResource ActivityTypeToColorConverter}}"
                                                StrokeThickness="0"
                                                Padding="8,4">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Type}"
                                                   TextColor="White"
                                                   FontSize="10"
                                                   FontAttributes="Bold" />
                                        </Border>
                                        <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                               TextColor="#666"
                                               FontSize="12"
                                               VerticalOptions="Center" />
                                    </HorizontalStackLayout>

                                    <Label Text="{Binding Title}"
                                           FontAttributes="Bold"
                                           TextColor="#2E7D32"
                                           FontSize="18"
                                           Margin="0,0,0,10" />

                                    <Label Text="{Binding Description}"
                                           TextColor="#333"
                                           FontSize="14"
                                           Margin="0,0,0,10" />

                                    <!-- Activity Details -->
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="0,10,0,0">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="ðŸ“… "
                                               FontSize="14" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding Date, StringFormat='{0:dddd, MMMM dd, yyyy at HH:mm}'}"
                                               TextColor="#666"
                                               FontSize="12" />

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="ðŸ“ "
                                               FontSize="14" />
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding Location}"
                                               TextColor="#666"
                                               FontSize="12" />

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="ðŸ‘¤ "
                                               FontSize="14" />
                                        <Label Grid.Row="2" Grid.Column="1"
                                               Text="{Binding CreatedByName}"
                                               TextColor="#666"
                                               FontSize="12" />
                                    </Grid>

                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Empty State -->
                <VerticalStackLayout IsVisible="{Binding Activities.Count, Converter={StaticResource CountToBoolConverter}}"
                                     Spacing="20"
                                     Margin="20,50,20,0">
                    <Label Text="ðŸ“…"
                           FontSize="48"
                           HorizontalOptions="Center" />
                    <Label Text="No Activities Available"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#666"
                           HorizontalOptions="Center" />
                    <Label Text="Check back later for upcoming school activities, trips, and events."
                           FontSize="14"
                           TextColor="#999"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>